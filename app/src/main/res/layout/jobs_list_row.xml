<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:orientation="horizontal"
    android:padding="@dimen/_10sdp">

    <ImageView
        android:id="@+id/joblist_truck_ship"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:src="@drawable/truck_ship" />


    <LinearLayout
        android:id="@+id/joblist_ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/joblist_ll_pickup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/joblist_image_source"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/_14sdp"
                android:background="@drawable/source" />

            <TextView
                android:id="@+id/joblist_et_pickupaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:background="@android:color/transparent"
                android:text="@string/source"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/joblist_ll_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job_image_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/icon_calendar" />

            <TextView
                android:id="@+id/joblist_txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="@string/ddmmyyyy"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />

            <ImageView
                android:id="@+id/job_image_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_25sdp"
                android:src="@drawable/icon_alarm" />

            <TextView
                android:id="@+id/joblist_txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:text="@string/time"
                android:textColor="@color/black"
                android:textSize="@dimen/small" />

            <TextView
                android:id="@+id/txt_hrs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hrs"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/joblist_ll_dollar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/job_image_dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:src="@drawable/icon_dollar" />

            <TextView
                android:id="@+id/txt_dollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/dollar"
                android:textColor="@color/green"/>

            <TextView
                android:id="@+id/joblist_txt_dollar"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:text="@string/txtdollar"
                android:textAllCaps="false"
                android:textColor="@color/green"
                android:textSize="@dimen/small" />

            <ImageView
                android:id="@+id/joblist_image_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_1sdp"
                android:src="@drawable/icon_more" />

            <TextView
                android:id="@+id/joblist_txt_status"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_7sdp"
                android:text="@string/txt_status" />
            <!-- <CheckBox
                 android:id="@+id/check_status"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawablePadding="20dp"
                 android:layout_marginLeft="@dimen/_52sdp"
                 android:text="@string/status"
                 android:textAllCaps="false"
                 android:textColor="@color/black"
                 android:textSize="@dimen/small" />-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>