<com.flipboard.bottomsheet.BottomSheetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomsheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:background="@color/gray">


    <ScrollView
        android:id="@+id/fragment_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/fragment_ll_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp">

                    <LinearLayout
                        android:id="@+id/ll_source"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragment_image_source"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/source" />

                        <TextView
                            android:id="@+id/fragment_et_source"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/source"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_ll_doublearrow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_txt_divider"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_weight="1"
                            android:background="@color/gray" />

                        <ImageView
                            android:id="@+id/fragment_image_arrow"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/sortby" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_ll_destination"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragment_image_destination"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:background="@drawable/destination" />

                        <TextView
                            android:id="@+id/fragment_et_destination"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:gravity="center_vertical"
                            android:hint="@string/destination"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:singleLine="true"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_ll_trucktype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/fragment_txt_trucktype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/trucktype"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />


                    <TextView
                        android:id="@+id/fragment_btn_trucktype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@color/white"
                        android:drawableRight="@drawable/dropdown"
                        android:gravity="left|center_vertical"
                        android:hint="@string/selecttrucktype"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/fragment_txt_divider1"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/fragment_txt_pickupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/pickupdt"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:id="@+id/fragment_ll_pickdatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <Button
                            android:id="@+id/fragment_btn_pickupdate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_weight="1.5"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/icon_calendar"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/ddmmyyyy1"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />

                        <Button
                            android:id="@+id/fragment_btn_pickuptime"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/icon_alarm"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/time"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_txt_divider2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />


                    <TextView
                        android:id="@+id/fragment_txt_deliverydate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/deliverydt"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <LinearLayout
                        android:id="@+id/fragment_ll_deliverydatetime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp">

                        <Button
                            android:id="@+id/fragment_btn_deliverydate"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:layout_weight="1.5"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/icon_calendar"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/ddmmyyyy2"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />

                        <Button
                            android:id="@+id/fragment_btn_deliverytime"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:drawableLeft="@drawable/icon_alarm"
                            android:drawablePadding="@dimen/_10sdp"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:text="@string/time2"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/newjob_txt_divider6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/txt_shipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/btn_shipperservice"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/newjob_txt_divider10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />


                    <TextView
                        android:id="@+id/current_btn_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/border"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtcurrent_border"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/current_txt_divider7"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/current_btn_nostraps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/noofstraps"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtcurrent_nostraps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/current_txt_divider8"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/current_btn_stopintransit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/stopsintransit"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtcurrent_stopintransit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/current_txt_divider9"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />


                    <TextView
                        android:id="@+id/current_btn_hazardousmaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/hazardous"
                        android:textAllCaps="false"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/txtcurrent_hazardousmaterial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/current_txt_divider10"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />


                    <RelativeLayout
                        android:id="@+id/add_service_values"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/btn_additionalservices"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/white"
                            android:gravity="left|center_vertical"
                            android:padding="@dimen/_5sdp"
                            android:text="@string/additionalservices"
                            android:textAllCaps="false"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/medium" />

                        <ImageView
                            android:id="@+id/current_image_add"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_250sdp"
                            android:src="@drawable/add"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/fragment_txt_divider4"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_117sdp"
                        android:scrollbars="vertical"
                        android:visibility="gone"
                        />
                    <TextView
                        android:id="@+id/fragment_txt_divider6"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/fragment_txt_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/notes"
                        android:textColor="@color/red"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/fragment_et_notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@color/gray"
                        android:maxLines="5"
                        android:minHeight="@dimen/_40sdp"
                        android:padding="@dimen/_10sdp"
                        android:singleLine="false"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/medium" />

                    <TextView
                        android:id="@+id/fragment_txt_divider5"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/gray" />

                    <TextView
                        android:id="@+id/fragment_btn_documents"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="@color/white"
                        android:gravity="left|center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/btndocuments"
                        android:textAllCaps="false"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/medium" />

                    <ImageView
                        android:id="@+id/current_documents_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_250sdp"
                        android:src="@drawable/add"
                        android:visibility="gone" />

                    <!--                    <TextView
                                            android:id="@+id/fragment_txt_tot"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/_10sdp"
                                            android:background="@color/white"
                                            android:drawableRight="@drawable/add"
                                            android:gravity="left|center_vertical"
                                            android:padding="@dimen/_1sdp"
                                            android:text="@string/btntotal"
                                            android:textAllCaps="false"
                                            android:textColor="@color/textcolor"
                                            android:textSize="@dimen/large" />-->
               <TextView
                   android:id="@+id/txt_documents_add"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   />











                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/red"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:id="@+id/fragment_ll_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/fragment_txt_total"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/total"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25sdp" />

                        <TextView
                            android:id="@+id/fragment_txt_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$70"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_25sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/fragment_txt_includes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="left"
                        android:text="@string/includes"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large" />


                    <Button
                        android:id="@+id/fragment_btn_viewdetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="right"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:text="@string/viewdetails"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@color/btnbg"
                android:gravity="right">

                <LinearLayout
                    android:id="@+id/linear_add"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/fragment_btn_currentjob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:background="@drawable/more_icon" />

                </LinearLayout>

                <TextView
                    android:id="@+id/current_txt_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:text="@string/txt_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</com.flipboard.bottomsheet.BottomSheetLayout>