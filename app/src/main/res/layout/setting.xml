<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">


    <!--  <ImageView
          android:id="@+id/setting_profile_icon1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="@dimen/_10sdp"
          android:background="@drawable/profile_image" />-->

    <driver.com.driver.ui.RoundedImageView
        android:id="@+id/setting_profile_icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/profile_image"/>

    <ScrollView
        android:id="@+id/setting_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_profile_icon"
        android:scrollbars="vertical"
        android:layout_marginTop="@dimen/_5sdp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelogo"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/setting_ll_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="bottom"
                    android:src="@drawable/email_icon1" />

                <EditText
                    android:id="@+id/setting_et_emailaddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@color/white"
                    android:hint="@string/email"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:textColor="@color/btnbg"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_email"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_mobile" />

                <EditText
                    android:id="@+id/setting_et_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/mobileno"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_mobile"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_password" />

                <TextView
                    android:id="@+id/setting_txt_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical"
                    android:text="@string/password"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />


            <LinearLayout
                android:id="@+id/setting_ll_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_password"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/setting_et_firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/firstname"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_firstname"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/setting_image_lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:gravity="bottom"
                    android:src="@drawable/icon_user" />

                <EditText
                    android:id="@+id/setting_et_lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawablePadding="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:hint="@string/lastname"
                    android:inputType="textCapSentences"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textSize="@dimen/medium" />

            </LinearLayout>

            <TextView
                android:id="@+id/setting_txt_divider4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/setting_ll_acceptjobs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerLinear"
                android:background="@color/white"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/setting_image_acceptjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_jobs"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"/>

                <!--  <android.support.v7.widget.SwitchCompat
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      app:theme="@style/Theme.AppCompat.Light.DarkActionBar"
                      android:id="@+id/view" />-->

                <Switch
                    android:id="@+id/mySwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/customswitchselector"
                    android:track="@drawable/custom_track"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
                <Switch
                    android:id="@+id/nextSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:thumb="@drawable/customswitchselector2"
                    android:track="@drawable/custom_track2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/setting_txt_acceptjobs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:text="@string/Acceptnewjob"
                    android:singleLine="true"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/setting_image_acceptjob"
                    android:layout_toEndOf="@+id/setting_image_acceptjob" />
                <!--
                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/t"/>
                -->

                <!--<ImageView
                    android:id="@+id/setting_image_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/toggle_on_"/>-->

            </RelativeLayout>

            <TextView
                android:id="@+id/setting_txt_divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/setting_ll_insurancedoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/centerLinear"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/setting_image_insurance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:src="@drawable/icon_insurance"/>
                <EditText
                    android:id="@+id/setting_et_insurancedoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_7sdp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/right_arrow"
                    android:gravity="center_vertical"
                    android:hint="@string/insurancedoc"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@null"
                    android:textSize="@dimen/medium" />


            </LinearLayout>

        </LinearLayout>



    </ScrollView>

    <Button
        android:id="@+id/setting_btn_signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/redbtnbackground"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        android:text="@string/btnsignout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/large"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>